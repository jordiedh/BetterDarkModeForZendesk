{
    "manifest_version": 3,
    "name": "Better Dark Mode for Zendesk",
    "version": "1.1",
    "description": "Fixes colour issues with Zendesk dark mode.",
    "permissions": ["scripting"],
    "host_permissions": [
        "*://*.zendesk.com/*",
        "*://*.zdusercontent.com/*",
        "*://*.apps.zdusercontent.com/*"
    ],
    "content_scripts": [{
        "matches": [
            "*://*.zendesk.com/*",
            "*://*.zdusercontent.com/*",
            "*://*.apps.zdusercontent.com/*"
        ],
        "js": ["content.js"],
        "run_at": "document_idle",
        "all_frames": true
    }]

}